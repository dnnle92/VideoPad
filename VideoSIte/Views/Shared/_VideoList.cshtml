@model IEnumerable<VideoSIte.Models.Video>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-3 col-md-4">
                <div class="thumbnail">
                    <div class="embed-responsive embed-responsive-4by3">
                        <iframe class="embed-responsive-item"
                                src="https://www.youtube.com/embed/@item.VideoUrlId"
                                frameborder="0"
                                allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen>
                        </iframe>
                    </div>
                    <div class="caption">
                        <h3>@item.VideoName</h3>
                        <p>
                            <a href="@Url.Action("Details", "Videos", new { id = item.VideoId })"
                                class="btn btn-primary" role="button">More</a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 


