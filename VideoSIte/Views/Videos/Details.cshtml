@model VideoSIte.Models.Video

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6 col-md-8">
            <h2>Video Detail</h2>

            <h3>@Html.DisplayFor(model => model.VideoName)</h3>
            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" 
                        src="https://www.youtube.com/embed/@Model.VideoUrlId"
                        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen>
                </iframe>
            </div>
            <h3>Video Products</h3>
            <div class="scrollmenu">
                @{
                    foreach (var item in Model.Products)
                    {
                        <a href="#">
                            <figure>
                                <img src="~/Content/Images/ProductImages/@item.ProductImage" class="img-responsive" alt="" width="100">
                                <figcaption>@item.ProductName</figcaption>
                            </figure>
                        </a>
                    }
                }
            </div>
        </div>
        <div class="container-fluid">
            <div class="col-sm-6 col-md-3 pull-right-sm">
                <h3 class="text-center">More Videos</h3>
                @Html.Action("_RelatedVideosList", "Videos")
            </div>
        </div>
    </div>
</div>