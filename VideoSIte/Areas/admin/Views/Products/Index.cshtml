@*@model IEnumerable<VideoSIte.Models.Product>*@
@model VideoSIte.ViewModels.VideoIndexData

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>

<ul class="nav nav-pills">
    <li role="presentation"><a href="~/admin/UserAdmin/Index/">User</a></li>
    <li role="presentation"><a href="~/admin/Videos/Index/">Videos</a></li>
    <li role="presentation"><a href="~/admin/Categories/Index/">Categories</a></li>
    <li role="presentation" class="active"><a href="~/admin/Products/Index/">Products</a></li>
</ul>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Product Image
        </th>
        <th>
            Date Added
        </th>
        <th>
            Video
        </th>
    </tr>

    @foreach (var item in Model.Products)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @{
                    foreach (var video in item.Videos)
                    {
                        @video.VideoId @: @video.VideoName <br />
                    }
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProductId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })
            </td>
        </tr>
    }

</table>
