@model IEnumerable<VideoSIte.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Categories</h2>

<ul class="nav nav-pills">
    <li role="presentation"><a href="~/admin/UserAdmin/Index/">User</a></li>
    <li role="presentation"><a href="~/admin/Videos/Index/">Videos</a></li>
    <li role="presentation" class="active"><a href="~/admin/Categories/Index/">Categories</a></li>
    <li role="presentation"><a href="~/admin/Products/Index/">Products</a></li>
</ul>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CatId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CatName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CatId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CatName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CatId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CatId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CatId })
        </td>
    </tr>
}

</table>
